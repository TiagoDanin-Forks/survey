@import '../../styles/core'

.host 
  padding $space-lg $space $space-xlg
  text-align center

.container 
  margin-left auto
  margin-right auto
  max-width $screen-xs

.title 
  font-size 3rem
  margin-bottom $space

.description 
  color $gray
  font-size 2.4rem

  &:not(:last-child)
    margin-bottom $space

.link 
  color $blue
  text-decoration none

.big
  display block
  font-size 5em

.green
  color $green

.yellow
  color $yellow

*
  box-sizing border-box
  margin 0
  padding 0

  &:before
  &:after
    box-sizing border-box

  &:hover
  &:focus
    outline transparent

a
  cursor pointer

html
  -moz-osx-font-smoothing auto
  -webkit-font-smoothing auto
  font-size 10px
  font-size responsive 8px 10px

body
  -webkit-overflow-scrolling touch
  background-color $white
  color $gray-darker
  font-family 'Open Sans', Arial, sans-serif
  font-size 1.8rem
  font-smoothing auto
  overflow-x hidden

:global(.section)
  background-color $white
  font-size 3rem
  padding $space-lg $space
  text-align center  

  &:nth-child(even)
    background-color $gray-white

:global(.subsection)
  &:not(:last-child)
    margin-bottom $space-xlg

:global(.comparation)
  +above('md')
    display flex


:global(.comparation__content)
  +above('md')
    width 50%